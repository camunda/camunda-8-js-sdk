{
	"name": "@camunda8/lib",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"test": "xo && ava",
		"build": "npm run clean && tsc --project tsconfig.json",
		"clean": "rm -rf ./dist && rm -f ./tsconfig.tsbuildinfo"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--import=tsx/esm"
		],
		"workerThreads": false
	},
	"xo": {
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/no-unsafe-return": "off",
			"unicorn/prefer-top-level-await": "off"
		}
	},
	"keywords": [],
	"author": "Josh Wulf <josh.wulf@camunda.com>",
	"license": "ISC",
	"description": "Shared libs for the Camunda 8 SDK",
	"devDependencies": {
		"@types/dropboxjs": "^0.0.34",
		"@types/filesystem": "^0.0.36",
		"@types/node": "^22.7.5",
		"ava": "^6.1.3",
		"dom": "^0.0.3",
		"jsdom": "^25.0.1",
		"tsx": "^4.19.1",
		"xo": "^0.59.3"
	},
	"dependencies": {
		"browserfs": "^1.4.3",
		"pify": "^6.1.0"
	}
}
