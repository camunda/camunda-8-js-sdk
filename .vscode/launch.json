    "version": "0.2.0",
    "configurations": [
				{
					"type": "node",
					"request": "launch",
					"name": "Debug AVA test file",
					"program": "${workspaceFolder}/packages/isomorphic-sdk/node_modules/ava/entrypoints/cli.mjs",
					"args": [
						"${file}",
						"--serial",
						"--node-arguments --import=tsx/esm"
					],
					"outputCapture": "std",
					"console": "integratedTerminal", // optional
					"skipFiles": [
						"<node_internals>/**/*.js"
					]
				}
    ]
}
